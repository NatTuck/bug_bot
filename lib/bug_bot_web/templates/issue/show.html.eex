<h1>Show Issue</h1>

<ul>
  <li>
    <strong>Title:</strong>
    <%= @issue.title %>
  </li>

  <li>
    <strong>Link:</strong>
    <%= link @issue.html_url, to: @issue.html_url %>
  </li>

  <li>
    <strong>Body:</strong>
    <%= @issue.body %>
  </li>

  <li>
    <strong>State:</strong>
    <%= @issue.state %>
  </li>
</ul>

<span><%= link "Edit", to: Routes.issue_path(@conn, :edit, @issue) %></span>
<span><%= link "Back", to: Routes.issue_path(@conn, :index) %></span>
